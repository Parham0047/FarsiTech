@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-5 mb-5" style="
        background: url('/Code1.jpg') no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        ">
    <h1 class="cp" style="float: left;
        font-family: Dancing Script, Verdana, Geneva, Verdana, sans-serif;
        font: bolder;
        font-size: 40px;">
        FarsiTech
    </h1>
    <p style="font: bold; font-family: Yagut-s,'B Titr'; color: #5bc0de; text-align: right; font-size: 30px;">
        یادگیری و سرگرمی با تکنولوژی
    </p>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card login-logout-tab">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href='/Identity/Account/Login'>ورود</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href='/Identity/Account/Register'>ثبت نام</a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @RenderSection("Scripts", required: false)
    <script>
    $(function () {
        var current = location.pathname;
        $('.nav-tabs li a').each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('href')) != -1) {
                $this.addClass('active');
            }
        })
    })
    </script>
}
