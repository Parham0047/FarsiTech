@using Microsoft.AspNetCore.Identity
@using FarsiTech.Areas.Identity.Data

@inject SignInManager<FarsiTechUser> SignInManager
@inject UserManager<FarsiTechUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-light btn btn-info" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-danger btn-block text-light mr-sm-1">خروج</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light btn btn-info" id="register" asp-area="Identity" asp-page="/Account/Register">ثبت نام</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light btn btn-info mr-sm-1" id="login" asp-area="Identity" asp-page="/Account/Login">ورود</a>
    </li>
}
</ul>
